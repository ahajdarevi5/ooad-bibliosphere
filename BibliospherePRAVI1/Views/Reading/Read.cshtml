@model BookReadingViewModel

@{
    ViewData["Title"] = "Read Book";
}

<h1></h1>

<div class="text-center">
    <pre style="white-space: pre-wrap; display: inline-block; text-align: center;">@Model.CurrentPageContent</pre>
</div>

<div class="text-center mt-3 d-flex justify-content-between align-items-center">
    @if (Model.CurrentPageNumber > 1)
    {
        <a asp-action="Read" asp-route-bookId="@Model.BookId" asp-route-pageNumber="@(Model.CurrentPageNumber - 1)" class="btn btn-primary">Previous Page</a>
    }
    <span>Page @Model.CurrentPageNumber of @Model.TotalPages</span>
    @if (Model.CurrentPageNumber < Model.TotalPages)
    {
        <a asp-action="Read" asp-route-bookId="@Model.BookId" asp-route-pageNumber="@(Model.CurrentPageNumber + 1)" class="btn btn-primary">Next Page</a>
    }
</div>




