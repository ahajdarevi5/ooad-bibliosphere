@model BibliospherePRAVI1.Models.Knjiga

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Knjiga</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="knjigaID" />
            <div class="form-group">
                <label asp-for="ISBN" class="control-label"></label>
                <input asp-for="ISBN" class="form-control" />
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="knjigaNaziv" class="control-label"></label>
                <input asp-for="knjigaNaziv" class="form-control" />
                <span asp-validation-for="knjigaNaziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="datumObjavljivanjaKnj" class="control-label"></label>
                <input asp-for="datumObjavljivanjaKnj" class="form-control" />
                <span asp-validation-for="datumObjavljivanjaKnj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="vrstaKnjige" class="control-label"></label>
                <select asp-for="vrstaKnjige" class="form-control" asp-items="Html.GetEnumSelectList<VrstaKnjige>()"></select>
                <span asp-validation-for="vrstaKnjige" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="izdavacID" class="control-label"></label>
                <select asp-for="izdavacID" class="form-control" asp-items="ViewBag.izdavacID"></select>
                <span asp-validation-for="izdavacID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" style="margin-top:20px; background-color:#416393" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary" style="margin-top:15px">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
